model Users {
  id String  @id @default(uuid()) 
  username String @db.VarChar(255)
  email String @db.VarChar(255) @unique
  password String 
  created_on DateTime
  posts Posts[]
   @@map("users")
}

model Posts{
  id String @id @default(uuid())
  title String 
  content String
  published Boolean @default(false)
  authorId String
  author Users @relation(fields: [authorId] , references: [id])
  created_on DateTime
}


